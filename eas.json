{
  "cli": {
    "version": ">= 15.0.12",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
        "android": {
          "buildType": "apk"
        },
        "ios": {
          "simulator": true
        }
    },
    "preview": {
      "distribution": "internal",
        "android": {
          "buildType": "apk"
        },
        "ios": {
          "simulator": false
        }
    },
    "production": {
      "autoIncrement": true,
      "distribution": "store",
      "android": {
          "buildType": "apk"
        },
        "ios": {
          "simulator": false
        }
    }
  },
  "submit": {
    "production": {}
  }
}
